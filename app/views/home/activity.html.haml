%h3
  .text-center
    Activity
    .badge.badge-info
      = @activities.count
%p

%ul.list-group
  - @activities.each do |activity|
    %li.list-group-item
      = activity.id
      = activity.trackable_type
      = activity.trackable_id
      -# link_to 表示名, パス
      = link_to activity.trackable, activity.trackable
      = activity.owner
      = activity.key
